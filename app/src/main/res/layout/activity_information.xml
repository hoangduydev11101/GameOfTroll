<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26c6da"
    tools:context="com.duylh.hoisieukho.Activity.InformationActivity">

    <TextView
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#000000"
        android:layout_marginTop="40sp"
        android:padding="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank for using!"
        android:textSize="30sp"

        />

    <TextView
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="20sp"
        android:padding="10sp"
        android:background="@drawable/backgroung_nameofgame"
        android:layout_gravity="center_horizontal"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:text="Hỏi siêu khó"
        android:textSize="30sp"
        android:id="@+id/txtNameofGame"
        />

    <TextView
        android:textColor="#fff"
        android:layout_marginTop="20sp"
        android:padding="10sp"
        android:background="@drawable/bg_nameme"
        android:layout_gravity="center_horizontal"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:text="Dev: DuyLh.IT"
        android:textSize="27sp"
        android:gravity="center"
        android:id="@+id/txtNameofMe"
        />
    <TextView
        android:textColor="#fff"
        android:layout_marginTop="20sp"
        android:padding="10sp"
        android:background="@drawable/backgroung_nameofgame"
        android:layout_gravity="center_horizontal"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:text="Email: duylh.2904@gmail.com"
        android:textSize="19sp"
        android:id="@+id/txtEmail"
        />
    <TextView
        android:textColor="#fff"
        android:layout_marginTop="20sp"
        android:padding="10sp"
        android:background="@drawable/bg_nameme"
        android:layout_gravity="center_horizontal"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:text="Phone: 01664094014"
        android:textSize="26sp"
        android:id="@+id/txtSDT"
        />
    <TextView
        android:textColor="#fff"
        android:layout_marginTop="20sp"
        android:padding="10sp"
        android:background="@drawable/backgroung_nameofgame"
        android:layout_gravity="center_horizontal"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:text="FB: facebook.com/loee.duy"
        android:textSize="20sp"
        android:id="@+id/txtFB"
        />
    <ImageButton
        android:id="@+id/btnFinish"
        android:background="@drawable/back"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="30sp"
        android:layout_height="30sp" />
    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:text="version: 1.0"/>
</LinearLayout>
