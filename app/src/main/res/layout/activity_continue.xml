<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/layoutContinue"
    android:background="#00ffffff"
    android:layout_height="220sp">

    <LinearLayout
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10sp"
            android:src="@drawable/funny_face"
            android:layout_width="100sp"
            android:layout_height="100sp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.library.bubbleview.BubbleTextView
                android:id="@+id/txtLoiNhan"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_marginRight="10sp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:padding="10sp"
                android:textSize="20sp"
                app:angle="12sp"
                app:bubbleColor="#4dd0e1"
                android:shadowColor="#ff00"
                android:gravity="center"
                android:text="Nếu tạm dừng ở đây, lần tiếp theo bạn sẽ bắt đầu từ câu đsd"/>

            <LinearLayout
                android:layout_marginTop="1sp"
                android:layout_marginRight="20sp"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnDung"
                    android:layout_marginRight="1sp"
                    android:padding="5sp"
                    android:gravity="center"
                    android:background="@drawable/bg_continue"
                    android:text="Dừng"
                    android:textColor="#fff"
                    android:layout_width="68dp"
                    android:layout_height="30sp" />
                <Button
                    android:id="@+id/btnTiep"
                    android:textColor="#fff"
                    android:padding="5sp"
                    android:gravity="center"
                    android:text="Tiếp..."
                    android:background="@drawable/bg_continue2"
                    android:layout_width="65sp"
                    android:layout_height="30sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>