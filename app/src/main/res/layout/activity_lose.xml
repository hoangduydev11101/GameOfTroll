<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ViewLose"
    android:background="@drawable/bg_lose"
    android:layout_height="300sp">

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout

            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sad"
                android:layout_width="150sp"
                android:layout_height="150sp"
                />
            <ImageView
                android:layout_marginLeft="35sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgsadeffect"
                android:src="@drawable/sad_effect"
                android:layout_width="25sp"
                android:layout_height="25sp" />
        </FrameLayout>

        <TextView
            android:textSize="20sp"
            android:textColor="#233c40"
            android:text="Thua rồi..!! Chơi lại đê.."
            android:layout_marginTop="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnThoatLose"
                android:textColor="#4dd0e1"
                android:gravity="center"
                android:text="Thoát"
                android:background="@drawable/bg_btnlose"
                android:layout_width="85sp"
                android:layout_height="35sp" />
            <Button
                android:id="@+id/btnContinueLose"
                android:textColor="#4dd0e1"
                android:gravity="center"
                android:text="Chơi tiếp"
                android:background="@drawable/bg_btnlose"
                android:layout_marginLeft="25sp"
                android:layout_width="85sp"
                android:layout_height="35sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>