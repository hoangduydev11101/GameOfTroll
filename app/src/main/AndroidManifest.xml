<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duylh.thanhtrolltrotai">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:screenOrientation="portrait"
            android:name="com.duylh.hoisieukho.Activity.MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:screenOrientation="portrait"
            android:name="com.duylh.hoisieukho.Activity.SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:screenOrientation="portrait"
            android:name="com.duylh.hoisieukho.Activity.GameActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:screenOrientation="portrait"
            android:name="com.duylh.hoisieukho.Activity.InformationActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name="com.duylh.hoisieukho.Activity.XepHangActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>